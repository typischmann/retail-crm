<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
							   http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
							   http://www.springframework.org/schema/context
							   http://www.springframework.org/schema/context/spring-context-3.2.xsd
							   http://www.springframework.org/schema/tx
							   http://www.springframework.org/schema/tx/spring-tx-3.2.xsd">
    <context:component-scan base-package="org.crm" />
    <context:annotation-config />

    <import resource="database/hibernate.xml"/>
    <import resource="database/data-source.xml"/>
    <!-- credentials and configurations for database -->
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location">
            <value>properties/database.properties</value>
        </property>
    </bean>
    <!-- Importing mappingContext from main resource -->
	<import resource="classpath:mappingContext.xml"/>

</beans>